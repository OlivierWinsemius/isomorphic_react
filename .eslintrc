{
    "extends": [
        "airbnb",
        "plugin:jest/recommended"
    ],
    "plugins": [
        "jest"
    ],
    "parser": "babel-eslint",
    "rules": {
        "indent": "off",
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "react/jsx-indent": "off",
        "react/jsx-no-undef": "off",
        "react/jsx-indent-props": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js"
                ]
            }
        ],
        "react/react-in-jsx-scope": "off",
        "linebreak-style": "off",
        "implicit-arrow-linebreak": "off",
        "sort-imports": "off",
        "import/imports-first": "off",
        "Import/order": "off"
    },
    "env": {
        "es6": true,
        "browser": true,
        "jest/globals": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": {
                    "resolve": {
                        "modules": [
                            "./client",
                            "node_modules"
                        ]
                    }
                }
            }
        }
    },
    "globals": {
        "React": true
    }
}