{
    "extends": ["prettier", "airbnb"],
    "parser": "babel-eslint",
    "rules": {
        "indent": "off",
        "comma-dangle": ["error", "always-multiline"],
        "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
        "react/jsx-indent": "off"
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": {
                    "resolve": {
                        "modules": ["./client", "node_modules"]
                    }
                }
            }
        }
    }
}
